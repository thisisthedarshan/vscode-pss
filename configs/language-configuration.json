{
  "comments": {
    "lineComment": "//",
    "blockComment": [
      "/*",
      "*/"
    ]
  },
  "brackets": [
    [
      "{",
      "}"
    ],
    [
      "[",
      "]"
    ],
    [
      "(",
      ")"
    ]
  ],
  "autoClosingPairs": [
    {
      "open": "{",
      "close": "}"
    },
    {
      "open": "[",
      "close": "]"
    },
    {
      "open": "(",
      "close": ")"
    },
    {
      "open": "'",
      "close": "'",
      "notIn": [
        "string",
        "comment"
      ]
    },
    {
      "open": "\"\"\"",
      "close": "\"\"\""
    },
    {
      "open": "\"",
      "close": "\"",
      "notIn": [
        "string"
      ]
    },
    {
      "open": "`",
      "close": "`",
      "notIn": [
        "string",
        "comment"
      ]
    },
    {
      "open": "/*",
      "close": " */",
      "notIn": [
        "string"
      ]
    }
  ],
  "autoCloseBefore": ";:.,=}])` \n\t",
  "surroundingPairs": [
    [
      "{",
      "}"
    ],
    [
      "[",
      "]"
    ],
    [
      "(",
      ")"
    ],
    [
      "'",
      "'"
    ],
    [
      "\"",
      "\""
    ],
    [
      "\"\"\"",
      "\"\"\""
    ],
    [
      "`",
      "`"
    ]
  ],
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\#\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)|(\\.\\w+)",
  "indentationRules": {
    "increaseIndentPattern": "^((?!\\/\\/|.*?\\/\\*.*\\*\\/\\s*$).)*(\\{[^}\"'`]*|\\([^)\"'`]*|\\[[^\\]\"'`]*)$",
    "decreaseIndentPattern": "^((?!.*?\\/\\*).*\\*/)?\\s*[\\)\\}\\]].*$"
  },
  "onEnterRules": [
    {
      "beforeText": "^\\s*/\\*\\*$",
      "action": {
        "indent": "indentOutdent",
        "appendText": " * "
      }
    },
    {
      "beforeText": "^\\s*/\\*\\*(?!.*\\*/).*$",
      "action": {
        "indent": "indentOutdent",
        "appendText": " * "
      }
    },
    {
      "beforeText": "^\\s*\\* (?!.*\\*/).*$",
      "action": {
        "indent": "none",
        "appendText": "* "
      }
    },
    {
      "beforeText": "^\\s*\\* .*$",
      "afterText": "^\\s*\\*/$",
      "action": {
        "indent": "outdent"
      }
    },
    {
      "beforeText": "^\\s*/\\*$",
      "action": {
        "indent": "indentOutdent",
        "appendText": " * "
      }
    },
    {
      "beforeText": "^\\s*/\\*(?!.*\\*/).*$",
      "action": {
        "indent": "indentOutdent",
        "appendText": " * "
      }
    },
    {
      "beforeText": "^\\s*\"\"\".*$",
      "action": {
        "indent": "none"
      }
    }
  ]
}